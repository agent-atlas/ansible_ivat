vrrp_script chk_haproxy {
    script "/usr/bin/systemctl is-active haproxy"
    interval 2
}

vrrp_instance VI_1 {
    state       MASTER

    interface   ens3

    virtual_router_id 11
    priority 200
    advert_int  1
    unicast_src_ip 192.168.182.73
    unicast_peer {
        192.168.182.71
        192.168.182.72
    }
    authentication {
        auth_type PASS
        auth_pass vsimSar5r2d
    }
    virtual_ipaddress {
        192.168.182.70
    }
    track_script {
        chk_haproxy
    }
    notify /etc/keepalived/keep_manager.sh
}
